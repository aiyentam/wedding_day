<h1>Edit Comment</h1>

<form action="/photo/{{this.id}}?_method=put" method="post">
  <label for="comment">Comment:</label>
  <input type="text" name="comment" value="{{title}}">
  <input type="submit" value="Submit" class="btn">
</form>

<form action="/photo/{{this.id}}?_method=delete" method="post">
  <input type="submit" value="Delete" class="btn">
</form>